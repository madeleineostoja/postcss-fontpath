{
    "env": {
        "node": true,
        "mocha": true
    },

    "rules": {
        // Possible errors
        "no-cond-assign": 0,
        "no-console": 0,
        "no-extra-parens": 2,

        // Best practices
        "block-scoped-var": 2,
        "eqeqeq": [2, "smart"],
        "no-else-return": 2,
        "no-floating-decimal": 2,
        "wrap-iife": [2, "inside"],

        // Variables
        "no-use-before-define": 1,

        // Stylistic issues
        "brace-style": 2,
        "camelcase": 2,
        "new-cap": 2,
        "no-lonely-if": 2,
        "no-underscore-dangle": 2,
        "space-after-keywords": 2,
        "space-in-brackets": 0,
        "space-infix-ops": 2,
        "one-var": 2,
        "quotes": [2, "single"]
    }
}